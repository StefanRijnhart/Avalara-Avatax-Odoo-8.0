<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="sale_order_update_form_view" model="ir.ui.view">
            <field name="name">sale.order.update.form.view</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[@string='Order Lines']/field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                    <field name="tax_amt" readonly="1" groups="avalara_salestax.group_avatax_view"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[@string='Order Lines']/field[@name='order_line']/form/group/group/field[@name='price_unit']" position="before">
                    <field name="tax_amt" readonly="1" groups="avalara_salestax.group_avatax_view"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[@string='Order Lines']/field[@name='order_line']" position="after">
                    <h3 groups="avalara_salestax.group_avatax_view"><label style="color: #7c7bad;" for="shipping_lines"/></h3>
                    <field name="shipping_lines" groups="avalara_salestax.group_avatax_view">
                        <tree string="Shipping Order Lines" editable="bottom">
                            <field name="ship_method_id"/>
                            <field name="ship_code_id"/>
                            <field name="tax_amt" readonly="1" groups="avalara_salestax.group_avatax_view"/>
                            <field name="shipping_cost"/>
                            <field name="sale_account_id" invisible="1"/>
                        </tree>
                    </field>
                </xpath>

                <field name="client_order_ref" position="after">
                    <field name="exemption_code" groups="avalara_salestax.group_avatax_view"/>
                    <field name="exemption_code_id" groups="avalara_salestax.group_avatax_view"/>
                    <field name="location_code" groups="avalara_salestax.group_avatax_view"/>
                    <field name="is_add_validate" invisible="1"/>
                </field>

                <xpath expr="/form/sheet/group" position="after">
                    <group colspan="4" col="4" string="Avalara Tax on..." groups="avalara_salestax.group_avatax_view">
                        <group colspan="2" col="2">
                            <field name="tax_add_default"/>
                            <field name="tax_add_invoice"/>
                            <field name="tax_add_shipping"/>
                        </group>
                        <group colspan="2" col="2">
                            <field name="tax_address" readonly="1"/>
                        </group>
                    </group>
                </xpath>
           </field>
        </record>

    </data>
</openerp>
